{
  "version": 2,
  "builds": [
    {
      "src": "AthletixReactFrontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "AthletixNodeBackend/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "AthletixNodeBackend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "AthletixReactFrontend/$1"
    }
  ]
}
